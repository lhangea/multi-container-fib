{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "lhangea/multi-client-fib",
      "hostname": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "lhangea/multi-server-fib",
      "hostname": "api",
      "essential": false,
      "portMappings": [
        {
          "hostPort": 3051,
          "containerPort": 5000
        }
      ],
      "memory": 128
    },
    {
      "name": "worker",
      "image": "lhangea/multi-worker-fib",
      "hostname": "worker",
      "links": ["server", "redis"],
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "lhangea/multi-nginx-fib",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server", "postgres", "redis"],
      "memory": 128
    }
  ]
}
